{% extends "AppBundle:Secured:base.html.twig" %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('angApp/controller/secured/kontakController.js') }}"></script>
    <script src="{{ asset('angApp/kontak.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="row" ng-controller="KontakController" style="margin-top: 10px;" cg-busy="main">
        <div class="col-lg-12">
            <div class="table-responsive" style="max-height: 500px; overflow: auto;">
                <table class="table table-striped table-bordered table-hover table-responsive">
                    <thead>
                    <tr>
                        <th style="cursor: pointer;" ng-click="sortData('created_at')">
                            Tanggal
                                            <span ng-if="sorting == 'created_at'">
                                                <i class="fa fa-chevron-up" ng-hide="sortingReverse"></i>
                                                <i class="fa fa-chevron-down" ng-show="sortingReverse"></i>
                                            </span>
                        </th>
                        <th style="cursor: pointer;" ng-click="sortData('nama_lengkap')">
                            Nama
                                            <span ng-if="sorting == 'nama_lengkap'">
                                                <i class="fa fa-chevron-up" ng-hide="sortingReverse"></i>
                                                <i class="fa fa-chevron-down" ng-show="sortingReverse"></i>
                                            </span>
                        </th>
                        <th style="cursor: pointer;" ng-click="sortData('email')">
                            Email
                                            <span ng-if="sorting == 'email'">
                                                <i class="fa fa-chevron-up" ng-hide="sortingReverse"></i>
                                                <i class="fa fa-chevron-down" ng-show="sortingReverse"></i>
                                            </span>
                        </th>
                        <th style="cursor: pointer;" ng-click="sortData('subyek')">
                            Subyek
                                            <span ng-if="sorting == 'subyek'">
                                                <i class="fa fa-chevron-up" ng-hide="sortingReverse"></i>
                                                <i class="fa fa-chevron-down" ng-show="sortingReverse"></i>
                                            </span>
                        </th>
                        <th style="cursor: pointer;" ng-click="sortData('pesan')">
                            Pesan
                                            <span ng-if="sorting == 'pesan'">
                                                <i class="fa fa-chevron-up" ng-hide="sortingReverse"></i>
                                                <i class="fa fa-chevron-down" ng-show="sortingReverse"></i>
                                            </span>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="kontak in kontaks | filter : searchFilter | orderBy : sorting : sortingReverse">
                        <td>[[ kontak.created_at | amDateFormat: datetime_conf ]]</td>
                        <td>[[ kontak.nama_lengkap ]]</td>
                        <td>[[ kontak.email ]]</td>
                        <td>[[ kontak.subyek ]]</td>
                        <td>[[ kontak.pesan ]]</td>
                    </tr>
                    <tr ng-if="kontaks.length == 0">
                        <td colspan="100">Belum ada data yang bisa ditampilkan.</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}