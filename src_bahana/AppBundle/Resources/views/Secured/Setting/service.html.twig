{% extends "AppBundle:Secured:base.html.twig" %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('angApp/controller/secured/setting/serviceController.js') }}"></script>
    <script src="{{ asset('angApp/setting.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="row" style="margin-top: 10px;">
        <form method="post" ng-controller="ServiceController" ng-submit="save()">
            <div class="col-lg-12">
                <div class="panel panel-info" cg-busy="main">
                    <div class="panel-heading">
                        Service Bahana Yamaha
                        <button type="submit" class="btn btn-primary btn-circle"><i
                                    class="fa fa-save"></i></button>
                    </div>
                    <div class="panel-body">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group" ng-class="{'has-error': errors.service}">
                                    <div class="text-danger small" ng-show="errors.service">[[ errors.service ]]</div>

                                    <label class="control-label">Service</label>
                                    <textarea type="text" class="form-control" name="service"
                                              placeholder="Service"
                                              ng-model="service.setting_value" style="resize: none"
                                              ckeditor="editorOptions"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}