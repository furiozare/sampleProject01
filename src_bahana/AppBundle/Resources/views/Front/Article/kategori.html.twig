{% extends 'AppBundle:Front:base.html.twig' %}

{% block content %}
    <div class="container main-container headerOffset">
        <div class="row">
            {{ render(controller('AppBundle:Front/Article:listKategori', {'currentPath':currentPath, 'currentUrl':currentUrl})) }}

            <div class="col-lg-9 col-md-9 col-sm-12">
                <div class="w100 clearfix category-top">
                    <h2> {{ kategoriNews.nama }} </h2>
                </div>
                <div class="row categoryProduct xsResponse clearfix">
                    {% for artikel in articles %}
                        <div class="item col-xs-12 list-view">
                            <div class="product">
                                <div class="image">
                                    <a href="#">
                                        <img src="{{ absolute_url(asset(artikel.webUrl)) }}" alt="img"
                                             class="img-responsive">
                                    </a>
                                </div>
                                <div class="description">
                                    <h4>
                                        <a href="#">
                                            {{ artikel.judul }}
                                        </a>
                                    </h4>
                                    <div class="list-description">
                                        <p>
                                            {{ artikel.createdAt | date('d M Y') }}
                                        </p>
                                    </div>
                                    <div class="list-description">
                                        <p>
                                            {{ artikel.caption | raw }}
                                        </p>
                                    </div>

                                    <div class="action-control">
                                        <a class="btn btn-primary"
                                           href="{{ url('app_article_detail', {'slugKategori':kategoriNews.slug, 'slugArtikel':artikel.slug}) }}">
                                            <span class="add2cart">Baca Selengkapnya</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}